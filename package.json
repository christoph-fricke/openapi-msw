{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "openapi-msw",
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Christoph Fricke <christoph@frickeonline.de>",
  "description": "Type-safe MSW wrapper for your OpenAPI schema.",
  "repository": "github:christoph-fricke/openapi-msw",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js"
    }
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier -c .",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{ts,js,mjs}": "eslint --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
